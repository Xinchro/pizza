{
  "name": "pizza",
  "version": "0.0.1",
  "description": "Have it your way! A StencilJS component library.",
  "main": "dist-stencil/index.cjs.js",
  "module": "dist-stencil/index.js",
  "types": "dist-stencil/types/index.d.ts",
  "collection": "dist-stencil/collection/collection-manifest.json",
  "collection:main": "dist-stencil/collection/index.js",
  "unpkg": "dist-stencil/pizza/pizza.esm.js",
  "exports": {
    ".": {
      "import": "./dist-stencil/pizza/pizza.esm.js",
      "require": "./dist-stencil/pizza/pizza.cjs.js"
    },
    "./my-component": {
      "types": "./dist-stencil/components/my-component.d.ts",
      "import": "./dist-stencil/components/my-component.js"
    },
    "./loader": {
      "types": "./loader/index.d.ts",
      "import": "./loader/index.js",
      "require": "./loader/index.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stenciljs/component-starter.git"
  },
  "files": [
    "dist-stencil/",
    "loader/"
  ],
  "scripts": {
    "build": "rm -rf dist storybook-static && stencil build",
    "start": "stencil build --watch",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "storybook:dev": "storybook dev -p 6006 --no-open",
    "storybook:build": "rm -rf dist storybook-static && storybook build"
  },
  "devDependencies": {
    "@stencil/core": "^4.38.3",
    "@stencil/storybook-plugin": "^0.5.6",
    "@storybook/addon-docs": "9.1.16",
    "@storybook/addon-links": "9.1.16",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "puppeteer": "^24.3.0",
    "storybook": "9.1.16"
  },
  "license": "ISC",
  "packageManager": "pnpm@10.22.0"
}